# Production Environment Variables for Azure Deployment
# Copy this to .env and fill in your actual values

# Environment
ENVIRONMENT=production

# Azure OpenAI Configuration
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_DEPLOYMENT_NAME=your_deployment_name
AZURE_API_VERSION=2024-12-01-preview

# Azure Redis Cache (will be set by deployment script)
AZURE_REDIS_CONNECTION_STRING=redis://:password@hostname:6380/0

# TMDB API
TMDB_API_KEY=your_tmdb_api_key_here

# JWT Settings
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_AUDIENCE=justwatched.app
JWT_ISSUER=justwatched.api
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Firebase Configuration
GOOGLE_APPLICATION_CREDENTIALS=/app/firebase-key.json
FIREBASE_API_KEY=your_firebase_api_key_here

# Application Insights (will be set by deployment script)
APPLICATIONINSIGHTS_CONNECTION_STRING=your_app_insights_connection_string

# Celery Configuration (will be set by deployment script)
CELERY_BROKER_URL=redis://:password@hostname:6380/0
CELERY_RESULT_BACKEND=redis://:password@hostname:6380/0

# Project Info
PROJECT_NAME=JustWatched
API_V1_STR=/api/v1 